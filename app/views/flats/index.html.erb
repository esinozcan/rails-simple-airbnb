<h1>All our Flats</h1>

<%= @flats.each do |flat| %>
  <h2> <%= flat.name %> </h2>
  <p> <%= flat.description %> </p>
  <p> Price Per Night: <%= flat.price_per_night %> </p>
  <p> Number of Guests: <%= flat.number_of_guests %> </p>
  <%= link_to "Details", flat_path(flat) %>
  <%= link_to "Edit", edit_flat_path(flat) %>
  <%= link_to "Delete", flat_path(flat), method: :delete %>

<% end %>

<%= link_to "Add a new flat", new_flat_path %>

